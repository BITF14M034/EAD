@model EAD_CMS.Models.Teacher

@{
    if (Session["username"] == null)
    {
        Response.Redirect("~/Login/Login");
    }    
}


<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Campus Management System</title>
    <link rel="stylesheet" href="~/Content/StyleTeacher.css" />
</head>

<body>
    
    <div class="header">
        <div class="logoDiv">
            <a href="@Url.Action("Teacher","Teacher")"><img class="logo" src="~/images/300px-PUCIT_Logo[1].png" /></a>
        </div>

        <div class="text">
            <h2>PUNJAB UNIVERSITY COLLEGE OF INFORMATION TECHNOLOGY</h2>
        </div>

        <div class="navBar">
            <ul>
                <li><a href="@Url.Action("Teacher","Teacher")">HOME</a></li>
                <li><a href=Controller?NewsUpdates>NEWS & UPADATES</a></li>
                <li><a href=Controller?student>PERSONAL INFO</a></li>
                <li><a href="@Url.Action("About","Teacher")">ABOUT US</a></li>
            </ul>
        </div>
    </div>


    <div class="body">
        <div class="teacherinfo">
            <img class="profpic" src="~/images/user.png" />
            <p>
               @Model.name
            </p>
            <p><a href="#">Change Password</a></p>
            <p>@Html.ActionLink("Logout", "Login", "Login")</p>
        </div>
    </div>

</body>
</html>

