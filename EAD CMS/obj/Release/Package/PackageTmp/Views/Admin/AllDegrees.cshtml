@model IEnumerable<EAD_CMS.Models.degree>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>All Degrees</title>

    <style>
        td:first-child {
            text-transform: uppercase;
        }

        body {
            font-family: 'Century Gothic';
        }

        td, th {
            padding: 10px 10px;
            display: table-cell;
            text-align: left;
            vertical-align: middle;
            border-radius: 2px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        h3 {
            font-weight: normal;
            color: #556270;
            text-shadow: 3px 2px 10px #808080;
        }

        a {
            text-decoration: none;
            transition-duration: 0.8s;
        }

            a:hover {
                color: #63B8FF;
                text-shadow: 5px 8px 10px #63B8FF;
            }
    </style>

</head>
<body>
    <p>
        @Html.ActionLink("Create New", "AddDegree")
    </p>
    <table class="table">
        <tr>
            <th><h3>@Html.DisplayNameFor(model => model.title)</h3></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.title)</td>
                <td>
                    @*@Html.ActionLink("Delete", "DeleteDegree", new { id=item.title })*@
                </td>
            </tr>
        }

    </table>
</body>
</html>
