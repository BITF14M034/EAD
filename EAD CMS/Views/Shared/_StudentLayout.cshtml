<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/StyleStudent.css")

    <link href="~/Content/Style.css" rel="stylesheet" />
</head>
<body>
    <div class="body">

        <div class="header">
            <div class="logoDiv">
                <a href="@Url.Action("Student","Student")"><img class="logo" src="~/images/300px-PUCIT_Logo[1].png" /></a>
            </div>

            <div class="text">
                <h2>PUNJAB UNIVERSITY COLLEGE OF INFORMATION TECHNOLOGY</h2>
            </div>

        </div>
        <div class="studentinfo">
            <img class="profpic" src="~/images/user.png" />
            <p style="color:hotpink">
                @Model.name
            </p>
            <p><a href="@Url.Action("ChangePassword", "Student")" target="contents">Change Password</a></p>
            <p>@Html.ActionLink("Logout", "Login", "Login")</p>
        </div>


        @RenderBody()
    </div>

    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)*@
</body>
</html>
