@model EAD_CMS.Models.assigned_course

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Assign Course</title>
    <script src='@Url.Content("~/Scripts/jquery-1.10.2.js")' type='text/javascript'></script>
    <script src='@Url.Content("~/Scripts/jquery.validate.js")' type='text/javascript'>         </script>
    <script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type='text/javascript'></script>

    <style>
        .field-validation-error{
            color:red;
        }
        body {
            font-family: 'Century Gothic';
        }

        h2, a {
            font-weight: normal;
            color: #556270;
            text-shadow: 3px 2px 10px #808080;
        }

        label, input[type="submit"] {
            color: #556270;
            text-shadow: 3px 2px 10px #808080;
        }

        .form-group {
            margin: 10px;
        }

        select, .text-box {
            border: 1px solid #c4c4c4;
            height: 25px;
            width: 275px;
            font-size: 13px;
            padding: 4px 4px 4px 4px;
            border-radius: 4px;
            -moz-border-radius: 4px;
            -webkit-border-radius: 4px;
            box-shadow: 0px 0px 8px #d9d9d9;
            -moz-box-shadow: 0px 0px 8px #d9d9d9;
            -webkit-box-shadow: 0px 0px 8px #d9d9d9;
            margin-top: 10px;
        }

            select:focus, .text-box:focus {
                outline: none;
                border: 1px solid #7bc1f7;
                box-shadow: 0px 0px 8px #7bc1f7;
                -moz-box-shadow: 0px 0px 8px #7bc1f7;
                -webkit-box-shadow: 0px 0px 8px #7bc1f7;
            }

        input[type="submit"] {
            background-color: white;
            border: 2px solid #e7e7e7;
            transition-duration: 0.8s;
            padding: 8px 16px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #555555;
                border: 2px solid #555555;
                color: white;
                box-shadow: 5px 8px 15px #808080;
            }

        a {
            padding: 4px 4px 4px 4px;
            text-decoration: none;
            transition-duration: 0.8s;
        }

            a:hover {
                color: #63B8FF;
                text-shadow: 5px 0px 10px #63B8FF;
            }
    </style>

</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h2>Assign Course</h2>
            <hr />
            @Html.ValidationSummary(true)
    
            <div class="form-group">
                @Html.LabelFor(model => model.course, "Course", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.course, Model.courseList)
                    @Html.ValidationMessageFor(model => model.course)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.batch, "Batch", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.batch, Model.batchList)
                    @Html.ValidationMessageFor(model => model.batch)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.degree, "Degree", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.degree, Model.degreeList)
                    @Html.ValidationMessageFor(model => model.degree)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.t_username, "Teacher's Username", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("t_username", Model.tUnameList)
                    @Html.ValidationMessageFor(model => model.t_username)
                </div>
            </div>

    
            <label class="field-validation-error">@Html.DisplayFor(model => model.ErrorMessage)</label>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" /> | 
                    @Html.ActionLink("Back to List", "AssignedCourses")
                </div>
            </div>
        </div>
    }
</body>
</html>
